{
  "variables": {
    "do_api_token": "{{env `DIGITALOCEAN_TOKEN`}}"
  },
  "builders": [{
    "type": "digitalocean",
    "api_token": "{{user `do_api_token`}}",
    "image": "debian-11-x64",
    "region": "nyc3",
    "size": "s-1vcpu-1gb",
    "ssh_username": "root",
    "snapshot_name": "remote-rtorrent-image-{{timestamp}}"
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "export DEBIAN_FRONTEND=noninteractive",
        "apt-get update",
        "apt-get install -y rtorrent openssh-server curl wget",
        "mkdir -p /root/torrents/downloads",
        "mkdir -p /root/torrents/session",
        "echo 'directory = /root/torrents/downloads' > /root/.rtorrent.rc",
        "echo 'session = /root/torrents/session' >> /root/.rtorrent.rc",
        "wget https://github.com/jesec/flood/releases/download/v4.9.3/flood-linux-x64.deb",
        "dpkg -i flood-linux-x64.deb",
        "systemctl enable ssh",
        "systemctl enable flood@root"
      ]
    }
  ]
}
